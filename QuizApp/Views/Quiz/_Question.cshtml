@model QuizApp.Models.Question

<div class="card mt-3 p-3" style="background-color: #FFFFFC">
    <p><strong>(@Model.Id) @Model.Text</strong></p>
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        <div class="form-check" >
            <input class="form-check-input"
                   type="radio"
                   name="UserAnswers[@Model.Id]"
                   value="@i"
                   id="q@Model.Id-@i"
                   style="border: 1px solid black;" />
            <label class="form-check-label" for="q@Model.Id-@i">
                @Model.Options[i]
            </label>
        </div>
    }
</div>
